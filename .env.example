# Environment variables for Langsmith
LANGSMITH_TRACING = true
LANGSMITH_PROJECT = "HR_Chatbot"
LANGSMITH_ENDPOINT = "https://api.smith.langchain.com"
LANGCHAIN_API_KEY = "your_langsmith_api_key"

# API keys for Pinecone and Gemini
PINECONE_API_KEY = "your_pinecone_api_key"
GOOGLE_API_KEY = "your_google_api_key"
HOLIDAY_API_KEY = "your_calendarific_api_key"

# Redis configuration
REDIS_URL = "redis://localhost:6379/0"
REDIS_CHAT_HISTORY_TTL_SECONDS = 3600
REDIS_CHAT_HISTORY_KEY_PREFIX = "chat-memory"

# Pinecone index name
INDEX_NAME = "hr-vector-search-index"